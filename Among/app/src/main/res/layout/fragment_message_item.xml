<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
            <LinearLayout
            android:id="@+id/yourChatArea"
            android:visibility="gone"
            android:padding="2dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/rcvProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:id="@+id/rcvTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxWidth="230dp"
                android:maxHeight="230dp"
                android:padding="3dp"
                android:background="@drawable/rouned_your_chat_message"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:maxWidth="230dp"
                android:maxHeight="230dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rouned_your_chat_message"
                android:id="@+id/rcvImage"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:padding="2dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/rcvUnreadCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:textColor="#FF9800"/>
                <TextView
                    android:id="@+id/rcvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textAlignment="textStart"
                    android:text="2017-06-13\n오후 11:00"
                    android:textColor="#68747C"/>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/exitArea"
        android:visibility="gone"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/exitTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="7dp"
            android:text="누구누구 님이 나가셨습니다."
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:background="@drawable/rouned_your_chat_message"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/myChatArea"
        android:padding="2dp"
        android:layout_gravity="right"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="2dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sendUnreadCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="11dp"
                android:textColor="#FF9800"/>

            <TextView
                android:id="@+id/sendDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textSize="10dp"
                android:text="06/13 오후\n 11:00"
                android:textColor="#68747C"/>
        </LinearLayout>
        <TextView
            android:maxWidth="250dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rouned_my_chat_message"
            android:id="@+id/sendTxt"
            android:padding="7dp"
            android:textColor="#fff"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:maxWidth="250dp"
            android:maxHeight="250dp"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rouned_my_chat_message"
            android:id="@+id/sendImage"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
